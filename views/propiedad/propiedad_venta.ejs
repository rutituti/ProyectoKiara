                    <div id="resultado">
                    <div>                    
                        <% if (propiedades.length > 0) { %>
                            <% for (let c of propiedades) { %>
                                <div row="col-sm-2 col-md-2 col-lg-2">
                                    <%- include('propiedadRentaform.ejs', {propiedades: c}) %>
