<section class="vh-100" style="background-color: #eee;">
	<div class="container h-100">
		<div class="row d-flex justify-content-center align-items-center h-100">
			<div class="col-lg-12 col-xl-11">
				<div class="card text-black" style="border-radius: 25px;">
					<div class="card-body p-md-5">
						<div class="row justify-content-center">
							<p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Iniciar nuevo proceso</p>
							<form class="mx-1 mx-md-4" action="/operacion/new" method="POST" enctype="multipart/form-data">
									
								<div class="container">
									<div class="row g-3">
										<div class="col-sm-6 col-md-6 col-lg-5 col-xl-5">
											<div class="input-group inline" for="ID_Cliente">
												<span class="btn btn-light" type="button">Cliente</span>
												<input class="form-control" list="datalistOptions_clientes" id="exampleDataList" placeholder="Seleccione Cliente..."id="ID_Cliente" aria-label="Example select with button addon" name="ID_Cliente">
												<datalist id="datalistOptions_clientes">
													<% for (let c of clientes) { %>
														<option value="<%= c.username %>"><%= c.Nombres %> <%= c.Primer_apellido %> <%= c.Segundo_apellido %></option>
													<% } %>
													
												</datalist>
												<!--
												<select class="form-select" id="ID_Cliente" aria-label="Example select with button addon" name="ID_Cliente">
													<option selected>Seleccione Cliente...</option>
													<option value="1">Casa</option>
												</select>
												-->
											</div>
										</div>
										<div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
											<div class="input-group inline" for="ID_proceso">
												<span class="btn btn-light" type="button">inicia proceso de </span>		
													<select class="form-select" data-live-search="true" id="ID_operacion" aria-label="Example select with button addon" name="ID_operacion">
														<option value="">Seleccione Proceso...</option>
														<option value="Venta">Venta</option>
														<option value="Renta">Renta</option>
														<option value="Compra">Compra</option>
														<option value="Alquilar">Alquilar</option>
													</select>
											</div>
										</div>
										<div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
											<div class="input-group inline" for="ID_proceso">
												<span class="btn btn-light" type="button">a la propiedad</span>
												<input class="form-control" list="datalistOptions_propiedad" id="exampleDataList" placeholder="Seleccione Propiedad..." id="ID_propiedad" aria-label="Example select with button addon" name="ID_propiedad">
												<datalist id="datalistOptions_propiedad">
													<% for (let p of propiedades) { %>
														<option value="<%= p.ID %>"><%= p.tipoInmueble %> <%= p.Calle %> <%= p.Numero %> <%= p.Colonia %> <%= p.Codigo_postal %> <%= p.Municipio %> <%= p.Municipio %> <%= p.Estado %></option>
													<% } %>
												</datalist>
												<!--
													<select class="form-select" id="nombre" aria-label="Example select with button addon" name="ID_tipoInmueble">
														<option selected>Seleccione Propiedad...</option>
														<option value="Venta">Venta</option>
														<option value="Renta">Renta</option>
														<option value="Compra">Compra</option>
														<option value="Alquilar">Alquilar</option>
													</select>

												-->
												
											</div>
										</div>
										<div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
											<div class="input-group inline" for="ID_proceso">
												<span class="btn btn-light" type="button">orientado por el asesor</span>
												<input class="form-control" list="datalistOptions_asesor" id="exampleDataList" placeholder="Seleccione Asesor..." id="ID_Asesor" aria-label="Example select with button addon" name="ID_Asesor">
												<datalist id="datalistOptions_asesor">
													<% for (let a of asesores) { %>
														<option value="<%= a.username %>"><%=a.Nombres %> <%= a.Primer_apellido %> <%= a.Segundo_apellido %></option>
													<% } %>
												</datalist>
												<!--

													<select class="form-select" id="nombre" aria-label="Example select with button addon" name="ID_tipoInmueble" placeholder="Seleccione Asesor...">
														<option value="">Seleccione Asesor...</option>
														<option value="Venta">Venta</option>
														<option value="Renta">Renta</option>
														<option value="Compra">Compra</option>
														<option value="Alquilar">Alquilar</option>
															
													</select>
												-->
											</div>
										</div>
									</div>
									
									<br><br><br>
									<div class="row g-3">
										<div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
											<input type="submit" id="enviar" button class="w-100 btn btn-lg btn-primary" href="/operacion/misprocesos" name="enviar" value="Iniciar">
										</div>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<br><br>
</section>

