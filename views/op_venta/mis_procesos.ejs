<%- include('../includes/head.ejs') %>
    <body>

      

        <div class="container">
        
            <%- include('../includes/sidebar.ejs', {
                ubicacion: ubicacion,
            }) %>            

           
            <section class="home-section ">
                <div class="w-100">

                            <br>
                            <a href="/operacion/new" class="mt-auto btn btn-success  ">Registrar nuevo proceso</a>
                            <% if (procesos.length > 0) { %>
                                <div class="row">
                                    <% for (let p of procesos) { %>
                                        <div class="col-sm-3 col-md-6 col-lg-12">
                                            <%- include('card_proceso.ejs', 
                                            {
                                                procesos: p,
                                                ubicacion: ubicacion,
                                                
                                            }) %>
                                        </div>
                                    <% } %>
                                </div>
                            <% } else { %>
                                <h3>No se encontraron procesos</h3>
                            <% } %>
                       

                      
                </div>
            </section>
        

        <script src="/js/bootstrap.bundle.min.js"> </script>
        <script src="/js/sidenav.js"></script>
    </body>
    
    
    </html>